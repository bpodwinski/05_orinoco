<%- include('head') %>
<%- include('header') %>

<div class="container">
    <section class="products">
        <h1 class="text-center">Nos caméras</h1>
        <p class="text-center mb-4">Strip steak pork chop doner, filet mignon picanha flank turkey pork belly leberkas
            cupim biltong andouille. Pig salami
            shank, chicken pork chop jowl capicola venison t-bone fatback kevin ham filet mignon hamburger sausage.</p>
        <div id="products-list" class="row">
            <% for(let i=0; i < data.length; i++) { %>
            <div class="col-12 col-md-4 col-xl-3 mb-4">
                <div class="card shadow-sm">
                    <img src="<%= data[i].imageUrl %>" class="card-img-top" alt="<%= data[i].name %>">
                    <div class="card-body">
                        <h5 class="card-title"><%= data[i].name %></h5>
                        <p class="card-text price"><%= data[i].price + " €" %></p>
                        <a href="/camera/<%= data[i]._id %>" class="btn btn-secondary">Voir le produit</a>
                    </div>
                </div>
            </div>
            <% } %>
        </div>
    </section>
</div>

<%- include('footer') %>